<?xml version="1.0" encoding="UTF-8"?>
<web-app>
    <context-param>
        <param-name>CaptchaStrategy</param-name>
        <param-value>session</param-value>
    </context-param>
    <context-param>
        <param-name>Timeout</param-name>
        <param-value>300</param-value>
    </context-param>
    <welcome-file-list>
        <welcome-file>/WEB-INF/index.html</welcome-file>
    </welcome-file-list>
    <resource-ref>
        DB Connection
        <res-ref-name>jdbc/toolshopwebDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <listener>
        <listener-class>
            com.epam.preprod.voitenko.listener.InitListener
        </listener-class>
    </listener>
</web-app>