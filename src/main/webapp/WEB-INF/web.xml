<?xml version="1.0" encoding="UTF-8"?>
<web-app>
    <servlet>
        <servlet-name>ViewHomePage</servlet-name>
        <jsp-file>/WEB-INF/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewHomePage</servlet-name>
        <url-pattern>/viewHomePage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ViewLogin</servlet-name>
        <jsp-file>/WEB-INF/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewLogin</servlet-name>
        <url-pattern>/viewLoginForm</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ViewCart</servlet-name>
        <jsp-file>/WEB-INF/cart.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewCart</servlet-name>
        <url-pattern>/viewCart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ViewCompletedOrder</servlet-name>
        <jsp-file>/WEB-INF/completed_order.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewCompletedOrder</servlet-name>
        <url-pattern>/viewCompletedOrder</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BadRequest</servlet-name>
        <jsp-file>/WEB-INF/400.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>BadRequest</servlet-name>
        <url-pattern>/badRequest</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>CaptchaStrategy</param-name>
        <param-value>session</param-value>
    </context-param>
    <context-param>
        <param-name>Timeout</param-name>
        <param-value>300</param-value>
    </context-param>
    <welcome-file-list>
        <welcome-file>/WEB-INF/index.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        DB Connection
        <res-ref-name>jdbc/toolshopwebDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <listener>
        <listener-class>
            com.epam.preprod.voitenko.listener.InitListener
        </listener-class>
    </listener>
    <filter>
        <filter-name>LocaleFilter</filter-name>
        <filter-class>com.epam.preprod.voitenko.filter.LocaleFilter</filter-class>
        <init-param>
            <param-name>localeStrategy</param-name>
            <param-value>session</param-value>
        </init-param>
        <init-param>
            <param-name>defaultLocale</param-name>
            <param-value>en</param-value>
        </init-param>
        <init-param>
            <param-name>EN</param-name>
            <param-value>en</param-value>
        </init-param>
        <init-param>
            <param-name>UA</param-name>
            <param-value>uk</param-value>
        </init-param>
        <init-param>
            <param-name>RU</param-name>
            <param-value>ru</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>LocaleFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>